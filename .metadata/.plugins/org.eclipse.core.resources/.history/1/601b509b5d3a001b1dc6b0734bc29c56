package stream;

import java.io.*;

public class Files {

	public Files() {
		// TODO Auto-generated constructor stub
	}


	@SuppressWarnings("null")
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
	    InputStream input = null;
	    OutputStream output = null;
	    
	    try {
	    	
	    	input = new FileInputStream("mine.txt");
	    	output = new FileOutputStream("file.txt");
	    	
	    	byte[] data = input.readAllBytes();
	    	
	    	for(int i: data) {
	    		output.write(i);
	    		
	    		System.out.flush();
	    	}
	    	
	    	
	    }catch(IOException io) {
	    	
	    	System.out.println(io);
	    	
	    }finally {
	    	
	    	try {
	    		if((input.read()) != -1) {
	    			
	    			input.close();
	    		}
	    		if(output == null) {
	    			
	    			output.close();
	    		}
	    		
	    	}catch(IOException io) {
	    		
	    		System.out.println(io);
	    	}
	    }
		
		
		
		
		
		
		
		
		
		
		     // WRITE ( OUTPUT STREAM)
		//String name = "Bismark Otu";
		//byte[] dat = name.getBytes();
		
		
//		byte[] data = "I am Nana Kwesi".getBytes();
//		
//		try {
//			
//			System.out.write(data);
//			
//		} catch (IOException e) {
//			
//			System.out.println(e);
//		}
		
	}

}
