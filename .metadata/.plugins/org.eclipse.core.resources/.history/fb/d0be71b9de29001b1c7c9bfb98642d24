package stattic;

public class Test {

	public Test() {
		// TODO Auto-generated constructor stub
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		String name = "Bismark";
		String mine = "BISMARK";
		
		System.out.println(name + mine);
		
		//  YOU CAN DELETE,RENAME OR CHANGE WITH STRINGBUFFER
		StringBuffer s1 = new StringBuffer("My name is Bismark Otu");
		s1.replace(11, 22, "Nana Kwesi");
		System.out.println(s1);
		
		
		StringBuffer s2 = new StringBuffer("My name is Bismark Otu");
		s2.append(" alias Kwesi Nana");
		System.out.println(s2);
		
		
		String names = name.toUpperCase();
		int n = names.compareTo(mine);
	
		System.out.println(n);
		System.out.println(names);
		System.out.println(names.length());
		
		
		
		
		
		
		//  STATIC DOES NOT USE AN OBJECT BEFORE OUTING. STATIC USES CLASS TO OUTPUT
		Stattic.show();
		System.out.println(Stattic.add(12, 8));
		System.out.println(Stattic.addition(10, 10));

	}

}
